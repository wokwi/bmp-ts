{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["lib"]
}
